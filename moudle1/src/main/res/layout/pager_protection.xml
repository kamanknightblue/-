<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_red_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/btn_upload_locatioin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_add" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"></com.baidu.mapapi.map.MapView>
            <Button
                android:id="@+id/btn_close_map0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|right"
                android:background="@drawable/selector_btn_close_protection"
                />

            <Button
                android:id="@+id/btn_locate_map0"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="5dp"
                android:background="@drawable/selector_btn_locate_protection"
                />
            <TextView
                android:id="@+id/tv_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_opacity68"
                android:gravity="center"
                android:text="点击添加监听"
                android:textSize="25sp" />




        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />
            <Button
                android:id="@+id/btn_close_map1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|right"
                android:background="@drawable/selector_btn_close_protection"
                />

            <Button
                android:id="@+id/btn_locate_map1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="5dp"
                android:background="@drawable/selector_btn_locate_protection"
                />
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_opacity68"
                android:gravity="center"
                android:text="点击添加监听"
                android:textSize="25sp" />


        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />
            <Button
                android:id="@+id/btn_close_map2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|right"
                android:background="@drawable/selector_btn_close_protection"
                />

            <Button
                android:id="@+id/btn_locate_map2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="5dp"
                android:background="@drawable/selector_btn_locate_protection"
                />
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_opacity68"
                android:gravity="center"
                android:text="点击添加监听"
                android:textSize="25sp" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />
            <Button
                android:id="@+id/btn_close_map3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|right"
                android:background="@drawable/selector_btn_close_protection"
                />

            <Button
                android:id="@+id/btn_locate_map3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="5dp"
                android:background="@drawable/selector_btn_locate_protection"
                />
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_opacity68"
                android:gravity="center"
                android:text="点击添加监听"
                android:textSize="25sp" />


        </FrameLayout>


    </LinearLayout>
</LinearLayout>